# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_VISION_MODEL=gpt-4o

# Database Configuration
# For local development with docker-compose.dev.yml, use:
#   DATABASE_URL=postgresql+asyncpg://goblin:password@localhost:5432/smart_goblin
# The default settings work with: ./scripts/dev-db.sh start (or dev-db.ps1 on Windows)
DATABASE_URL=postgresql+asyncpg://goblin:password@localhost:5432/smart_goblin

# Development Database Settings (used by docker-compose.dev.yml)
# Override the default PostgreSQL password if needed
POSTGRES_PASSWORD=password

# pgAdmin Settings (optional, used when starting with --pgadmin flag)
# Access pgAdmin at http://localhost:5050
PGADMIN_EMAIL=admin@localhost
PGADMIN_PASSWORD=admin

# Logging
LOG_LEVEL=INFO

# External APIs
SCRYFALL_API_BASE=https://api.scryfall.com
SEVENTEENLANDS_BASE=https://www.17lands.com

# Scheduler
# Hour (UTC) when daily parser runs (default: 3 = 03:00 UTC)
PARSER_SCHEDULE_HOUR=3
